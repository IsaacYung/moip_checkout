<div class="row">
  <div class="columns medium-6 card end">
    <%= form_for(product) do |f| %>
    <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :product_name, class: "text-subhead" %>
      <%= f.text_field :product_name %>
    </div>

    <div class="field">
      <%= f.label :quantity, class: "text-subhead" %>
      <%= f.number_field :quantity %>
    </div>

    <div class="field">
      <%= f.label :detail, class: "text-subhead" %>
      <%= f.text_field :detail %>
    </div>

    <div class="field">
      <%= f.label :price, class: "text-subhead" %>
      <%= f.number_field :price %>
    </div>

    <div class="actions">
      <%= f.submit 'Salvar', class: 'raised-button ink' %>
    </div>
    <% end %>
  </div>
</div>
